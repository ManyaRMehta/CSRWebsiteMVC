@model CSRWebsiteMVC.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Your Profile";
}

<h2 class="mb-4">Your Profile</h2>

<div class="d-flex align-items-center mb-4">
    <div class="me-4">
        @if (!string.IsNullOrEmpty(Model.PhotoPath))
        {
            <img src="@Model.PhotoPath" alt="Profile Picture" class="img-thumbnail" style="width: 150px; height: 150px; object-fit: cover;" />
        }
        else
        {
            <img src="/profilepics/default.png" alt="Default Profile" class="img-thumbnail" style="width: 150px; height: 150px; object-fit: cover;" />
        }
    </div>
    <div>
        <p><strong>Full Name:</strong> @Model.FullName</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
        <a asp-action="EditProfile" class="btn btn-sm btn-warning mt-2">Edit Profile</a>
    </div>
</div>

@if (!User.IsInRole("Admin"))
{
    <h3>Your Applications</h3>

    <table class="table table-bordered mt-3">
        <thead class="table-light">
            <tr>
                <th>Mission</th>
                <th>Applied On</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var app in Model.Applications)
            {
                <tr>
                    <td>@app.Mission.Title</td>
                    <td>@app.AppliedOn.ToShortDateString()</td>
                    <td>@app.Status</td>
                </tr>
            }
        </tbody>
    </table>
}

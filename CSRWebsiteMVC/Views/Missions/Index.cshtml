@model IEnumerable<CSRWebsiteMVC.Models.Mission>
@{
    ViewData["Title"] = "Missions";
}

<h2>Missions</h2>

@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">+ Create New Mission</a>
    </div>
}

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var mission in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                @if (!string.IsNullOrEmpty(mission.ImagePath))
                {
                    <img src="@mission.ImagePath" class="card-img-top" alt="Mission Image" style="height: 200px; object-fit: cover;" />
                }
                else
                {
                    <img src="/uploads/default.jpeg" class="card-img-top" alt="Default Image" style="height: 200px; object-fit: cover;" />
                }

                <div class="card-body">
                    <h5 class="card-title">@mission.Title</h5>
                    <p class="card-text">@mission.Description.Substring(0, Math.Min(100, mission.Description.Length))...</p>
                    <p class="card-text"><strong>Location:</strong> @mission.Location</p>
                    <p class="card-text"><strong>Dates:</strong> @mission.StartDate.ToShortDateString() - @mission.EndDate.ToShortDateString()</p>

                    <p class="card-text">
                        <strong>Skills:</strong>
                        @foreach (var skill in mission.MissionSkillAssignments.Select(msa => msa.MissionSkill.SkillName))
                        {
                            <span class="badge bg-secondary me-1">@skill</span>
                        }
                    </p>
                </div>

                <div class="card-footer d-flex justify-content-between">
                    @if (User.Identity.IsAuthenticated && User.IsInRole("User") && !User.IsInRole("Admin"))
                    {
                        if (((HashSet<int>)ViewBag.UserApplications).Contains(mission.Id))
                        {
                            <span class="text-success fw-bold">Already Applied</span>
                        }
                        else
                        {
                            <form asp-action="Apply" method="post" asp-route-missionId="@mission.Id">
                                <button type="submit" class="btn btn-sm btn-primary">Apply</button>
                            </form>
                        }

                        <a asp-action="ViewDetails" asp-route-id="@mission.Id" class="btn btn-sm btn-outline-secondary">View</a>
                    }
                    else if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Details" asp-route-id="@mission.Id" class="btn btn-sm btn-outline-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@mission.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@mission.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    }
                </div>
            </div>
        </div>
    }
</div>

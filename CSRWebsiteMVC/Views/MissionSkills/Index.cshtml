@model IEnumerable<CSRWebsiteMVC.Models.MissionSkill>

@{
    ViewData["Title"] = "Mission Skills";
}

<h2>Mission Skills</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Add New Skill</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Skill Name</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var skill in Model)
        {
            <tr>
                <td>@skill.SkillName</td>
                <td>@skill.Description</td>
                <td>
                    <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@skill.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@skill.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

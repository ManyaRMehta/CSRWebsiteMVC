@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2>Admin Analytics Dashboard</h2>

<div class="row">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-header">Total Users</div>
            <div class="card-body">
                <h4 class="card-title">@ViewBag.TotalUsers</h4>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-header">Total Missions</div>
            <div class="card-body">
                <h4 class="card-title">@ViewBag.TotalMissions</h4>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info mb-3">
            <div class="card-header">Total Applications</div>
            <div class="card-body">
                <h4 class="card-title">@ViewBag.TotalApplications</h4>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3">
            <div class="card-header">Most Applied Mission</div>
            <div class="card-body">
                <h6 class="card-title">@ViewBag.TopMissionTitle</h6>
                <p>@ViewBag.TopMissionCount applications</p>
            </div>
        </div>
    </div>
</div>

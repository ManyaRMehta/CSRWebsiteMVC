@model IEnumerable<CSRWebsiteMVC.Models.MissionTheme>

@{
    ViewData["Title"] = "Mission Themes";
}

<h2>Mission Themes</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Theme</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
